<div class='nested-fields'>
  <div class="mt-5 md:mt-6 md:col-span-2">
    <%= form.hidden_field :_destroy %>
      <div class="shadow overflow-hidden sm:rounded-md">
        <div class="px-4 py-5 bg-white sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-6">
              <%= form.label(:title, class: 'block text-sm  font-medium text-gray-700') %>
              <%= form.text_field(:title, class: 'mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md')%>      
            </div>
            <div class="col-span-6 sm:col-span-4">
              <%= form.label(:organization, class: 'block text-sm  font-medium text-gray-700') %>
              <%= form.text_field(:organization, class: 'mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md')%>      
            </div>
            <div class="col-span-6 sm:col-span-2">
              <%= form.label(:dates, class: 'block text-sm  font-medium text-gray-700') %>
              <%= form.text_field(:dates, class: 'mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md')%>      
              <p class="mt-2 text-sm text-gray-500">
                Ej. Nov-2019 a Ene-2021
              </p>
            </div>
            <div class="col-span-6">
              <%= form.label(:description, class: 'block text-sm  font-medium text-gray-700') %>
              <div class="mt-1">
                <%= form.text_area(:description, rows: 3, class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-3')%>
              </div>
              <p class="mt-2 text-sm text-gray-500">
                Tu descripci√≥n de puesto, logros y funciones
              </p>
            </div>

            <div class="flex justify-end col-span-6">
              <%= link_to '#', data: { action: 'click->nested-form#remove_association' }, class: 'inline-flex items-center px-4 py-2 border shadow-sm text-sm font-medium rounded-full text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24"
                  stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Eliminar
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>