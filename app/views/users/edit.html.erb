<div class="top-16">
  <!-- Comienza header -->
  <div class="pl-8 pr-4 md:px-14 pt-4 pb-4 bg-gray-100">
    <div class="md:flex pt-0 md:justify-between md:items-center">
      <a href="">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-800 hover:text-blue-600" fill="none"
          viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      </a>
    </div>
  </div>
</div>
<%= form_for @user do |form| %>
  <div class="mt-10 mx-6 md:mx-12 sm:mt-12 ">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-1 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Sobre mi</h3>
          <p class="mt-1 text-sm text-gray-600">
            Información general de tu perfil.
          </p>
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6">

                <div class="col-span-6 sm:col-span-6">
                  <%= form.label(:name, class: 'block text-sm  font-medium text-gray-700') %>
                  <%= form.text_field(:name, class: 'mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md')%>
                </div>

                <div class="col-span-6">
                  <%= form.label(:about, class: 'block text-sm  font-medium text-gray-700') %>
                  <div class="mt-1">
                    <%= form.text_area(:about, rows: 3, class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-3')%>
                  </div>
                  <p class="mt-2 text-sm text-gray-500">
                    Cuéntanos un poco sobre tus gustos, intereses y/o objetivos profesionales.
                  </p>
                </div>

                <div class="col-span-6">
                  <label class="block text-sm font-medium text-gray-700">
                    Foto de perfil
                  </label>
                  <div class="mt-1 flex items-center">
                    <span class="inline-block bg-gray-100 rounded-full overflow-hidden h-12 w-12">
                      <%= image_tag(@user.avatar, width: 200, class: 'h-full w-full') if @user.avatar.attached? %>
                    </span>
                    <%= form.file_field :avatar, class: 'ml-5 bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 text-sm leading-4 font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>                  
                  </div>
                </div>

                <div class="col-span-2">
                  <%= form.label(:country, class: 'block text-sm font-medium text-gray-700')%>
                  <%= form.select(:country, options_for_select([['México'], ['Colombia'], ['España'], ['Argentina'], ['Venezuela'], ['Chile'], ['Otro']], @user.country), {:include_blank => 'Selecciona'}, {:class => 'mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md'})%>
                </div>

                <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                  <%= form.label(:specialization, class: 'block text-sm  font-medium text-gray-700') %>
                  <%= form.text_field(:specialization, class: 'mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md')%>
                </div>

                <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                  <%= form.label(:years_of_experience, class: 'block text-sm  font-medium text-gray-700') %>
                  <%= form.text_field(:years_of_experience, class: 'mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md')%>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

  <div class=" sm:block" aria-hidden="true">
    <div class="py-10 mx-8 md:mx-12">
    <div class="border-t border-gray-200"></div>
    </div>
  </div>

  <div class="mt-2 sm:mt-10 sm:mt-0 mx-6 md:mx-12">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-1 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Experiencia</h3>
          <p class="mt-1 text-sm text-gray-600">
            Agregar información sobre tu experiencia profesional
          </p>
        </div>
      </div>

      <div class="mt-5 md:mt-0 md:col-span-2" data-controller='nested-form'>
        <div data-nested-form-target="add_item" class="flex justify-end">
          <%= link_to '#', data: {action: 'nested-form#add_association'} ,class: 'inline-flex items-center px-3 py-2 border border-transparent tracking-wide  text-sm leading-4 font-semibold rounded-full text-blue-800  hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-700' do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Agregar experiencia
          <% end %>
        </div>

        <template data-nested-form-target='template'>
          <%= form.fields_for :jobs, Job.new, child_index: 'TEMPLATE_RECORD' do |job|%>
            <%= render 'job_fields', form: job %>
          <% end %>
        </template>

        <%= form.fields_for :jobs do |job|%>
          <%= render 'job_fields', form: job %>
        <% end %>

      </div>
    </div>
  </div>

  <div class="sm:block" aria-hidden="true">
      <div class="py-10 mx-8 md:mx-12">
      <div class="border-t border-gray-200"></div>
      </div>
  </div>

  <div class="mt-1 sm:mt-10 sm:mt-0 mx-6 md:mx-12">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-1 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Educación</h3>
          <p class="mt-1 text-sm text-gray-600">
            Agrega información sobre tu educación
          </p>
        </div>
      </div>

      <div class="mt-5 md:mt-0 md:col-span-2" data-controller='nested-form'>
        <div data-nested-form-target="add_item" class="flex justify-end">
          <%= link_to '#', data: {action: 'nested-form#add_association'} ,class: 'inline-flex items-center px-3 py-2 border border-transparent tracking-wide  text-sm leading-4 font-semibold rounded-full text-blue-800  hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-700' do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Agregar estudios
          <% end %>
        </div>

        <template data-nested-form-target='template'>
          <%= form.fields_for :studies, Study.new, child_index: 'TEMPLATE_RECORD' do |study|%>
            <%= render 'study_fields', form: study %>
          <% end %>
        </template>

        <%= form.fields_for :studies do |study|%>
          <%= render 'study_fields', form: study %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sm:block" aria-hidden="true">
      <div class="py-10 mx-8 md:mx-12">
        <div class="border-t border-gray-200"></div>
      </div>
  </div>

  <div class="mt-1 sm:pt-4 flex justify-end pb-12 mx-6 sm:mx-12">
    <%= link_to 'Cancelar', user_path(current_user), class: 'bg-white py-2 px-4 border border-gray-300 rounded-full shadow-sm text-sm font-medium text-blue-gray-900 hover:bg-blue-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400' %>
    <%= form.submit('Guardar', class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-full text-white bg-red-500 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500')%>
  </div>
<% end %>