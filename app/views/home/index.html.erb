<section class="w-full text-gray-900 py-36  bg-cover bg-no-repeat bg-center mt-6" style="background-image: url('/assets/logo.png')">  
  <div class="">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 grid md:grid-cols-2 gap-12">
      <div class="w-full">
        <h1 class="text-white font-extrabold text-3xl md:text-5xl">
          ¿Tienes preguntas?
        </h1>
        <h2 class="text-white font-regular text-2xl md:text-3xl mt-2">
          Envíanos un mensaje y muy pronto nuestro equipo te contactará
        </h2>
        <p class="mt-6 text-white font-regular text-xl">
          hola@prevelop.mx
        </p>
      </div>
      <%= form_with url: contacts_path, method: :post do |form| %>
        <div class="w-full bg-gray-50 p-8 flex flex-col lg:ml-auto w-full mt-10 lg:mt-0 rounded-md">
          <div class="relative mb-4">
            <%= form.label(:name, 'Nombre', class: 'leading-7 text-sm text-gray-600') %>
            <%= form.text_field(:name, class: 'w-full bg-white rounded-md border border-gray-300 focus:border-indigo-600 focus:ring-2 focus:ring-indigo-200 text-sm outline-none text-gray-900 py-1 px-3 leading-8 transition-colors duration-150 ease-in-out') %>
          </div>
          <div class="relative mb-4">
            <%= form.label(:email, 'Correo', class: 'leading-7 text-sm text-gray-600') %>
            <%= form.text_field(:email, class: 'w-full bg-white rounded-md border border-gray-300 focus:border-indigo-600 focus:ring-2 focus:ring-indigo-200 text-sm outline-none text-gray-900 py-1 px-3 leading-8 transition-colors duration-150 ease-in-out') %>
          </div>
          <div class="relative mb-4">
            <%= form.label(:message, 'Mensaje', class: 'leading-7 text-sm text-gray-600') %>
            <%= form.text_area(:message, rows: 4, class: 'w-full bg-white rounded-md border border-gray-300 focus:border-indigo-600 focus:ring-2 focus:ring-indigo-200 text-sm outline-none text-gray-900 py-1 px-3 leading-8 transition-colors duration-150 ease-in-out')%>
          </div>
          <%= form.submit "Enviar", class: 'text-white bg-blue-900 border-0 py-2 px-6 focus:outline-none hover:bg-blue-800 rounded text-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</section>

