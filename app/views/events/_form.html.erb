<%= form_for @event do |form|%>
  <div class="mt-10 mx-6 md:mx-12 sm:mt-12 ">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-1 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Sobre la formación</h3>
          <p class="mt-1 text-sm text-gray-600">
            Información básica de la formación.
          </p>
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        
        <div class="shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 bg-white sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-6 sm:col-span-6">
                <%= form.label(:name, class: 'block text-sm  font-medium text-gray-700') %>
                <%= form.text_field(:name, class: 'mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md') %>
              </div>

              <div class="col-span-6">
                <%= form.label(:description, class: 'block text-sm font-medium text-gray-700') %>
                <%= form.text_area(:description, rows: 3, class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-3') %>
                <p class="mt-2 text-sm text-gray-500">
                  Cuéntanos un poco sobre este curso y sus objetivos.
                </p>
              </div>

              <div class="col-span-6">
                <label class="block text-sm font-medium text-gray-700">
                  Foto de portada del evento
                </label>
                <div class="mt-1 flex items-center">
                  <span
                    class="inline-block bg-gray-100 rounded-md overflow-hidden h-24 w-40 flex justify-center items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12  text-gray-300" fill="none"
                      viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </span>
                  <button type="button"
                    class="ml-5 bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 text-sm leading-4 font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Change
                  </button>
                </div>
              </div>

              <div class="col-span-2">
                <%= form.label(:modality, class: 'block text-sm  font-medium text-gray-700')%>
                <%= form.select(:modality, options_for_select([['En línea'], ['Presencial'], ['Otro']], @event.modality), {:include_blank => 'Selecciona'}, {:class => 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'})%>
              </div>

              <div class="col-span-2">
                <%= form.label(:event_type, class: 'block text-sm  font-medium text-gray-700')%>
                <%= form.select(:event_type, options_for_select([['Taller'], ['Curso'], ['Webinar'],['Diplomado'], ['Conferencia'], ['Otro']], @event.event_type), {:include_blank => 'Selecciona'}, {:class => 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'})%>
              </div>

              <div class="col-span-2">
                <%= form.label(:specialization, class: 'block text-sm  font-medium text-gray-700')%>
                <%= form.select(:specialization, options_for_select([['Diseño'], ['Marketing Digital'], ['User Experience'],['Educación'], ['Mercadotecnia y Publicidad'], ['Otro']], @event.specialization), {:include_blank => 'Selecciona'}, {:class => 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'})%>
              </div>

              <div class="col-span-6 sm:col-span-3 lg:col-span-3">
                <label for="cooking_time" class="block text-sm font-medium text-gray-700">Fechas del evento</label>
                <div class="flex justify-start">
                  <input type="text" name="cooking_time" id="cooking_time"
                    class="mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full  sm:text-sm border border-gray-300 h-9 rounded-md">
                  <button type="submit"
                    class="ml-3 flex-shrink-0 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-800 hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-800">
                    Agregar fecha
                  </button>
                </div>
              </div>

              <div class="col-span-6">
                <div>
                  <div class="flex items-center">
                    <label for="type" class="block text-sm font-medium text-gray-500">
                      &bull; Sábado 25 de Octubre
                      <span>
                        De 17:00 a 18:30
                      </span>
                    </label>
                    <a href=""
                      class="text-gray-400 hover:text-red-600 hover:bg-gray-100 rounded-full p-1 flex items-center justify-center block ml-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </a>
                  </div>
                  <div class="flex items-center mt-2">
                    <label for="type" class="block text-sm font-medium text-gray-500">
                      &bull; Sábado 25 de Octubre
                      <span>
                        De 17:00 a 18:30
                      </span>
                    </label>
                    <a href=""
                      class="text-gray-400 hover:text-red-600 hover:bg-gray-100 rounded-full p-1 flex items-center justify-center block ml-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class=" sm:block" aria-hidden="true">
    <div class="py-10 mx-8 md:mx-12">
      <div class="border-t border-gray-200"></div>
    </div>
  </div>

  <div class="mt-2 sm:mt-10 sm:mt-0 mx-6 md:mx-12">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-1 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Competencia y aprendizajes esperados</h3>
          <p class="mt-1 text-sm text-gray-600">
            Competencia y aprendizajes esperados de la formación
          </p>
        </div>
      </div>

      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="mt-2 md:mt-2 md:col-span-2">
          <div class="shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6">

                <div class="col-span-6 sm:col-span-6">
                  <label for="name" class="block text-sm  font-medium text-gray-700">
                    Competencia
                  </label>
                  <input type="text" name="name" id="name" autocomplete="name"
                    class="mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md">
                </div>
                <div class="col-span-6 sm:col-span-6 lg:col-span-6" data-controller='nested-form'>
                  <div data-nested-form-target="add_item" class="flex justify-end">
                    <%= link_to '#', data: {action: 'nested-form#add_association'} ,class: 'inline-flex items-center px-3 py-2 border border-transparent tracking-wide  text-sm leading-4 font-semibold rounded-full text-blue-800  hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-700' do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      Agregar aprendizaje esperado
                    <% end %>
                  </div>
                  <template data-nested-form-target='template'>
                    <%= form.fields_for :expected_learnings, ExpectedLearning.new, child_index: 'TEMPLATE_RECORD' do |learning|%>
                      <%= render 'learning_fields', form: learning %>
                    <% end %>
                  </template>

                  <%= form.fields_for :expected_learnings do |learning|%>
                    <%= render 'learning_fields', form: learning %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="sm:block" aria-hidden="true">
    <div class="py-10 mx-8 md:mx-12">
      <div class="border-t border-gray-200"></div>
    </div>
  </div>

  <div class="mt-2 sm:mt-10 sm:mt-0 mx-6 md:mx-12">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-1 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Información adicional</h3>
          <p class="mt-1 text-sm text-gray-600">
            Información adicional sobre la formación
          </p>
        </div>
      </div>

      <div class="mt-5 md:mt-0 md:col-span-2">

        <div class="mt-2 md:mt-2 md:col-span-2">
          <div class="shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6">

                <div class="col-span-6 sm:col-span-6 lg:col-span-6" data-controller='nested-form'>
                  <div data-nested-form-target="add_item" class="flex justify-end">
                    <%= link_to '#', data: {action: 'nested-form#add_association'} ,class: 'inline-flex items-center px-3 py-2 border border-transparent tracking-wide  text-sm leading-4 font-semibold rounded-full text-blue-800  hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-700' do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      Agregar Requisitos
                    <% end %>
                  </div>
                  <template data-nested-form-target='template'>
                    <%= form.fields_for :requirements, Requirement.new, child_index: 'TEMPLATE_RECORD' do |requirement|%>
                      <%= render 'requirement_fields', form: requirement %>
                    <% end %>
                  </template>

                  <%= form.fields_for :requirements do |requirement|%>
                    <%= render 'requirement_fields', form: requirement %>
                  <% end %>
                </div>

                <div class="col-span-6 sm:col-span-6 lg:col-span-6 mt-4">
                  <label for="cooking_time" class="block text-sm font-medium text-gray-700">Para quien es esta
                    formación</label>
                </div>

                <div class="mt-1 md:mt-1 md:col-span-3">
                  <fieldset>
                    <legend class="text-base font-medium text-gray-900"></legend>
                    <div class="mt-2 space-y-4">
                      <div class="flex items-start">
                        <div class="h-5 flex items-center">
                          <input id="comments" name="comments" type="checkbox"
                            class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                        </div>
                        <div class="ml-3 text-sm">
                          <label for="comments" class="font-medium text-gray-500">Público en general</label>
                        </div>
                      </div>
                      <div>
                        <div class="flex items-start">
                          <div class="h-5 flex items-center">
                            <input id="candidates" name="candidates" type="checkbox"
                              class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="candidates" class="font-medium text-gray-500">Emprendedores</label>
                          </div>
                        </div>
                      </div>
                      <div>
                        <div class="flex items-start">
                          <div class="h-5 flex items-center">
                            <input id="offers" name="offers" type="checkbox"
                              class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="offers" class="font-medium text-gray-500">Profesionales independientes</label>
                          </div>
                        </div>
                      </div>
                      <div>
                        <div class="flex items-start">
                          <div class="h-5 flex items-center">
                            <input id="offers" name="offers" type="checkbox"
                              class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="offers" class="font-medium text-gray-500">Directivos</label>
                          </div>
                        </div>
                      </div>
                      <div>
                        <div class="flex items-start">
                          <div class="h-5 flex items-center">
                            <input id="offers" name="offers" type="checkbox"
                              class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="offers" class="font-medium text-gray-500">Gerentes</label>
                          </div>
                        </div>
                      </div>
                      <div>
                        <div class="flex items-start">
                          <div class="h-5 flex items-center">
                            <input id="offers" name="offers" type="checkbox"
                              class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="offers" class="font-medium text-gray-500">Comerciantes</label>
                          </div>
                        </div>
                      </div>
                      <div>
                        <div class="flex items-start">
                          <div class="h-5 flex items-center">
                            <input id="offers" name="offers" type="checkbox"
                              class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="offers" class="font-medium text-gray-500">Creativos </label>
                          </div>
                        </div>
                      </div>
                      <div>
                        <div class="flex items-start">
                          <div class="h-5 flex items-center">
                            <input id="offers" name="offers" type="checkbox"
                              class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="offers" class="font-medium text-gray-500">Ingenieros</label>
                          </div>
                        </div>
                      </div>
                      <div>
                        <div class="flex items-start">
                          <div class="h-5 flex items-center">
                            <input id="offers" name="offers" type="checkbox"
                              class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="offers" class="font-medium text-gray-500">Administrativos</label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </fieldset>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="sm:block" aria-hidden="true">
    <div class="py-10 mx-8 md:mx-12">
      <div class="border-t border-gray-200"></div>
    </div>
  </div>

  <div class="mt-1 sm:pt-4 flex justify-end pb-12 mx-6 sm:mx-12">
    <button type="button" class="bg-white py-2 px-12 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-blue-gray-900 hover:bg-blue-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400">
      Cancelar
    </button>

    <%= form.submit 'Guardar', class: 'ml-3 inline-flex justify-center py-2 px-12 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-500 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' %>
  </div>
<% end %>