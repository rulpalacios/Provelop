<div class="sticky top-16"> <!-- Comienza header -->
  <div class="pl-8 pr-4 md:px-14 pt-4 pb-4 bg-gray-100">
    <div class="md:flex pt-0 md:justify-between md:items-center">
      <a href="" class="hover:bg-gray-200 rounded-full p-2 hover:text-blue-800 text-blue-600 ">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      </a>
    </div>
  </div>
</div>

<%= form_for @event do |form|%>
  <div class="mt-10 mx-6 md:mx-12 sm:mt-12 ">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-1 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Sobre la formación</h3>
          <p class="mt-1 text-sm text-gray-600">
            Información básica de la formación.
          </p>
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        
        <div class="shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 bg-white sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-6 sm:col-span-6">
                <%= form.label(:name, class: 'block text-sm  font-medium text-gray-700') %>
                <%= form.text_field(:name, class: 'mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 h-9 rounded-md') %>
              </div>

              <div class="col-span-6">
                <%= form.label(:description, class: 'block text-sm font-medium text-gray-700') %>
                <%= form.text_area(:description, rows: 3, class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-3') %>
                <p class="mt-2 text-sm text-gray-500">
                  Cuéntanos un poco sobre este curso y sus objetivos.
                </p>
              </div>

              <div class="col-span-6">
                <label class="block text-sm font-medium text-gray-700">
                  Foto de portada del evento
                </label>
                <div class="mt-1 flex items-center">
                  <span
                    class="inline-block bg-gray-100 rounded-md overflow-hidden h-24 w-40 flex justify-center items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12  text-gray-300" fill="none"
                      viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </span>
                  <button type="button"
                    class="ml-5 bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 text-sm leading-4 font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Change
                  </button>
                </div>
              </div>

              <div class="col-span-2">
                <label for="type" class="block text-sm font-medium text-gray-700">Modalidad</label>
                <select id="type" name="type" autocomplete="type"
                  class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                  <option>En línea</option>
                  <option>Presencial</option>
                  <option>Otro</option>
                </select>
              </div>

              <div class="col-span-2">
                <label for="type" class="block text-sm font-medium text-gray-700">Tipo de formación</label>
                <select id="type" name="type" autocomplete="type"
                  class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                  <option>Taller</option>
                  <option>Curso</option>
                  <option>Webinar</option>
                  <option>Diplomado</option>
                  <option>Conferencia</option>
                  <option>Otro</option>
                </select>
              </div>

              <div class="col-span-2">
                <label for="type" class="block text-sm font-medium text-gray-700">Área de especialización</label>
                <select id="type" name="type" autocomplete="type"
                  class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                  <option>Diseño</option>
                  <option>Marketing Digital</option>
                  <option>Negocios</option>
                  <option>User Experience</option>
                  <option>Educación</option>
                  <option>Mercadotecnia y Publicidad</option>
                  <option>Otro</option>
                </select>
              </div>

              <div class="col-span-6 sm:col-span-3 lg:col-span-3">
                <label for="cooking_time" class="block text-sm font-medium text-gray-700">Fechas del evento</label>
                <div class="flex justify-start">
                  <input type="text" name="cooking_time" id="cooking_time"
                    class="mt-1 pl-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full  sm:text-sm border border-gray-300 h-9 rounded-md">
                  <button type="submit"
                    class="ml-3 flex-shrink-0 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-800 hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-800">
                    Agregar fecha
                  </button>
                </div>
              </div>

              <div class="col-span-6">
                <div>
                  <div class="flex items-center">
                    <label for="type" class="block text-sm font-medium text-gray-500">
                      &bull; Sábado 25 de Octubre
                      <span>
                        De 17:00 a 18:30
                      </span>
                    </label>
                    <a href=""
                      class="text-gray-400 hover:text-red-600 hover:bg-gray-100 rounded-full p-1 flex items-center justify-center block ml-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </a>
                  </div>
                  <div class="flex items-center mt-2">
                    <label for="type" class="block text-sm font-medium text-gray-500">
                      &bull; Sábado 25 de Octubre
                      <span>
                        De 17:00 a 18:30
                      </span>
                    </label>
                    <a href=""
                      class="text-gray-400 hover:text-red-600 hover:bg-gray-100 rounded-full p-1 flex items-center justify-center block ml-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="sm:block" aria-hidden="true">
    <div class="py-10 mx-8 md:mx-12">
      <div class="border-t border-gray-200"></div>
    </div>
  </div>

  <div class="mt-1 sm:pt-4 flex justify-end pb-12 mx-6 sm:mx-12">
    <button type="button" class="bg-white py-2 px-12 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-blue-gray-900 hover:bg-blue-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400">
      Cancelar
    </button>

    <%= form.submit 'Guardar', class: 'ml-3 inline-flex justify-center py-2 px-12 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-500 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' %>
  </div>
<% end %>